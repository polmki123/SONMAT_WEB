
<div id="page-start"></div>

<section class="full-width-section">

	<div class="container-fluid">
		<div class="row">

			<!-- sidebar start -->
			<!-- ================ -->
			<aside class="col-lg-3 ">
				<div class="sidebar">
					<div class="pv-30"></div>
					<div class="block clearfix">
						<% opponents.forEach(function(user){ %>

							<div class="media mb-3  white-bg hc-item-box bordered round-corners">

								<div class="d-flex pr-2">
									<div class="">

										<span class="icon default-bg mt-2 mb-2 ml-2 mr-2 circle"><i class="fa fa-user"></i></span>

									</div>
								</div>
								<div class="media-body container">
									<div class="row pt-3">
										<div class="col-lg-9">
											<h6 class="media-heading"><a href="/message/to/<%= user.id %>/timeline"><%= user.name %> </a></h6>
											<p class="small margin-clear"><i class="fa fa-calendar pr-2"></i><%= user.send_date %></p>
										</div>
										<div class="col-lg-3">
											<div class="header-dropdown-buttons padding-top-clear">
												<div class="btn-group">
													<a href="/message/to/<%= user.id %>/timeline" class="btn btn-default "><i class="fa fa-envelope text-dark"></i><span class="cart-count bg-danger text-white"><%= user.count %></span></a>
												</div>
											</div>
										</div>
									</div>
								</div>

							</div>
						<% }); %>
						
					</div>
				</div>
			</aside>
			<!-- sidebar end -->
			<div class="main col-lg-9 border-left">
				<section class="main-container">

					<div class="container">
						<div class="row">

							<!-- main start -->
							<!-- ================ -->
							<div class="main col-12">

								<!-- page-title start -->
								<!-- ================ -->
								<h1 class="page-title">Message Timeline</h1>
								<div class="separator-2"></div>
								<!-- page-title end -->

								<!-- timeline grid start -->
								<!-- ================ -->
								<div class="timeline clearfix">

									<div class="timeline-date-label clearfix">May 2017</div>

									<!-- timeline grid item start -->
									<% msgs.forEach(function(msg){ %>
										<% if(msg.from_user_id == uid) { %>
											<div class="timeline-item pull-right">
												<article class="blogpost hc-shadow-2 light-gray-bg bordered hc-element-invisible" data-animation-effect="fadeInUpSmall" data-effect-delay="100">
													<header>
														<h2><a href="/message/to/<%= msg.id %>"><%= msg.sonmat.message.title %></a></h2>
														<div class="post-info">
															<span class="post-date">
																<i class="fa fa-calendar-o pr-1"></i>
																<span class="day"><%= msg.send_date %></span>
																<span class="month"><%= msg.send_date %></span>
															</span>
															<span class="submitted"><i class="fa fa-user pr-1 pl-1"></i> by <a href="#"><%= msg.From.name %></a></span>
														</div>
													</header>
													<div class="blogpost-content">
														<p><%= msg.sonmat.message.contents %></p>
													</div>
													<footer class="clearfix">
														<div class="link pull-right"><i class="fa fa-link pr-1"></i><a href="/message/to/<%= msg.id %>">Read More</a></div>
													</footer>
												</article>
											</div>
										<% } else { %>
											<div class="timeline-item">
												<article class="blogpost hc-shadow-2 light-gray-bg bordered hc-element-invisible" data-animation-effect="fadeInUpSmall" data-effect-delay="100">
													<header>
														<h2><a href="/message/to/<%= msg.id %>"><%= msg.sonmat.message.title %></a></h2>
														<div class="post-info">
															<span class="post-date">
																<i class="fa fa-calendar-o pr-1"></i>
																<span class="day"><%= msg.send_date %></span>
																<span class="month"><%= msg.send_date %></span>
															</span>
															<span class="submitted"><i class="fa fa-user pr-1 pl-1"></i> by <a href="#"><%= msg.To.name %></a></span>
														</div>
													</header>
													<div class="blogpost-content">
														<p><%= msg.sonmat.message.contents %></p>
													</div>
													<footer class="clearfix">
														<div class="link pull-right"><i class="fa fa-link pr-1"></i><a href="/message/to/<%= msg.id %>">Read More</a></div>
													</footer>
												</article>
											</div>
										<% } %>
									<% }); %>




									
									<!-- timeline grid item end -->
								</div>
								<!-- timeline grid end -->

							</div>
							<!-- main end -->

						</div>
					</div>
				</section>
			</div>
		</div>
	</div>
</section>